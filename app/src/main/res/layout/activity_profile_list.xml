<?xml version="1.0" encoding="utf-8"?>


<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_profile_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#353333"
    tools:context="com.wildstop.smixxitdemo.ProfileList">

   <android.support.v4.widget.DrawerLayout
       android:id="@+id/drawer_layout"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent">



       <RelativeLayout
           android:layout_width="fill_parent"
           android:layout_height="fill_parent">








           <ImageView
               android:src="@mipmap/user_profle_fina"
               android:padding="20dp"
               android:scaleType="centerCrop"
               android:layout_width="fill_parent"
               android:layout_height="fill_parent" />

           <TextView
               android:layout_alignParentBottom="true"
               android:id="@+id/centerPoint"
               android:text=""
               android:layout_width="0dip"
               android:layout_height="wrap_content"
               android:layout_centerHorizontal="true" />

           <TextView
               android:id="@+id/textview_user_greeting"
               android:textStyle="bold"
               android:textSize="20dp"
               android:textColor="#329EAE"
               android:gravity="center"
               android:text="Welcome, User"
               android:layout_width="fill_parent"
               android:layout_height="wrap_content" />

           <com.mikhaellopez.circularimageview.CircularImageView
               android:layout_marginTop="30dp"
               app:civ_border_color="#EEEEEE"
               app:civ_border_width="1dp"
               app:civ_shadow="true"
               android:src="@mipmap/smixxit_logo_circle"
               android:layout_below="@+id/textview_user_greeting"
               android:layout_centerHorizontal="true"
               android:layout_width="100dp"
               android:layout_height="100dp"
               android:id="@+id/circularImageView" />

           <TextView
               android:gravity="center"
               android:layout_alignEnd="@+id/platinum"
               android:layout_alignStart="@+id/platinum"
               android:textSize="10sp"
               android:background="#C90065"
               android:id="@+id/rank"
               android:layout_marginTop="80dp"
               android:textStyle="bold"
               android:textColor="@android:color/white"
               android:text="Rank"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />

           <TextView
               android:id="@+id/platinum"
               android:background="@color/colorAccent"
               android:textStyle="bold"
               android:textColor="@android:color/white"
               android:layout_marginLeft="10dp"
               android:layout_below="@id/rank"
               android:text="PLATINUM"
               android:textSize="20sp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />


           <ScrollView
               android:layout_marginRight="9dp"
               android:layout_marginTop="200dp"
               android:layout_width="200dp"
               android:layout_height="fill_parent">

               <RelativeLayout
                   android:layout_width="fill_parent"
                   android:layout_height="wrap_content">


                   <com.mikhaellopez.circularimageview.CircularImageView
                       app:civ_border_width="1dp"
                       android:layout_centerHorizontal="true"
                       android:id="@+id/imageview_travis"
                       android:src="@mipmap/travis"
                       android:layout_width="100dp"
                       android:layout_height="100dp" />

                   <com.mikhaellopez.circularimageview.CircularImageView
                       app:civ_border_width="1dp"
                       android:src="@mipmap/gary_v"
                       android:layout_marginTop="30dp"
                       android:layout_below="@+id/imageview_travis"
                       android:layout_centerHorizontal="true"
                       android:id="@+id/imageview_gary"
                       android:layout_width="100dp"
                       android:layout_height="100dp"/>


                   <com.mikhaellopez.circularimageview.CircularImageView
                       app:civ_border_width="1dp"
                       android:src="@mipmap/asap_ferg"
                       android:layout_marginTop="30dp"
                       android:layout_below="@+id/imageview_gary"
                       android:layout_centerHorizontal="true"
                       android:id="@+id/imageview_ferg"
                       android:layout_width="100dp"
                       android:layout_height="100dp" />


                   <com.mikhaellopez.circularimageview.CircularImageView
                       app:civ_border_width="1dp"
                       android:src="@mipmap/pewdepie"
                       android:layout_marginTop="30dp"
                       android:layout_below="@+id/imageview_ferg"
                       android:layout_centerHorizontal="true"
                       android:id="@+id/imageview_pewdwie"
                       android:layout_width="100dp"
                       android:layout_height="100dp" />


                   <com.mikhaellopez.circularimageview.CircularImageView
                       app:civ_border_width="1dp"
                       android:src="@mipmap/mac_miller"
                       android:layout_marginTop="30dp"
                       android:layout_below="@+id/imageview_pewdwie"
                       android:layout_centerHorizontal="true"
                       android:id="@+id/imageview_macmiller"
                       android:layout_width="100dp"
                       android:layout_height="100dp" />

                   <com.mikhaellopez.circularimageview.CircularImageView
                       app:civ_border_width="1dp"
                       android:src="@mipmap/holly"
                       android:layout_marginTop="30dp"
                       android:layout_below="@+id/imageview_macmiller"
                       android:layout_centerHorizontal="true"
                       android:id="@+id/imageview_holly"
                       android:layout_width="100dp"
                       android:layout_height="100dp" />











               </RelativeLayout>









           </ScrollView>





           <TextView
               android:background="@color/colorAccent"
               android:layout_below="@+id/youhave"
               android:layout_alignStart="@+id/youhave"
               android:textSize="17dp"
               android:textColor="@android:color/white"
               android:textStyle="bold"
               android:text="200 POINTS"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/textView"
               android:layout_alignEnd="@+id/youhave"
               android:layout_alignBottom="@+id/platinum" />

           <TextView

               android:background="#C90065"
               android:gravity="center"
               android:textSize="10dp"
               android:textColor="@android:color/white"
               android:textStyle="bold"
               android:text="You Have    "
               android:layout_width="100dp"
               android:layout_height="wrap_content"
               android:id="@+id/youhave"
               android:layout_alignBaseline="@+id/rank"
               android:layout_alignBottom="@+id/rank"
               android:layout_toEndOf="@+id/circularImageView"
               android:layout_marginStart="15dp" />

           <android.support.design.widget.CoordinatorLayout
               android:id="@+id/coordinatorLayout"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:fitsSystemWindows="true"
               android:layout_alignParentTop="true"
               android:layout_alignParentStart="true">

               <!-- Appbar -->

               <com.github.rubensousa.floatingtoolbar.FloatingToolbar
                   android:backgroundTint="#329EAE"
                   android:id="@+id/floatingToolbar_profile"
                   android:layout_width="match_parent"
                   android:layout_height="?attr/actionBarSize"
                   android:layout_gravity="bottom"
                   app:floatingMenu="@menu/main" />

               <android.support.design.widget.FloatingActionButton
                   android:src="@mipmap/smixxit_logo"
                   app:backgroundTint="@color/colorGrey"
                   android:layout_margin="10dp"
                   android:id="@+id/fab_profile"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="bottom|end"
                   />


           </android.support.design.widget.CoordinatorLayout>

       </RelativeLayout>


       <include
           layout="@layout/seemorecelebs_drawer"
           android:id="@+id/listview_more_celebs"
           android:layout_gravity="start"
           android:layout_width="240dp"
           android:layout_height="fill_parent"/>


       <include
           layout="@layout/seemorefriends_drawer"
           android:id="@+id/listview_see_more_friends"
           android:layout_gravity="end"
           android:layout_width="240dp"
           android:layout_height="fill_parent"/>





   </android.support.v4.widget.DrawerLayout>




</android.support.v4.widget.DrawerLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_in_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#353333"
    tools:context="com.wildstop.smixxitdemo.SignInScreen">

    <ImageView
        android:id="@+id/imageview_smixxit_logo"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/smixxit_logo"
        android:layout_width="200dp"
        android:layout_height="120dp" />



    <RelativeLayout
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_below="@id/imageview_smixxit_logo"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">


        <TextView
            android:layout_marginTop="20dp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:id="@+id/textview_emailaddress_sign_in"
            android:text="Email Address"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:singleLine="true"
            android:textColor="#329EAE"
            android:backgroundTint="#C90065"
            android:layout_below="@id/textview_emailaddress_sign_in"
            android:id="@+id/editext_username_sign_in"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <TextView

            android:layout_marginTop="30dp"
            android:id="@+id/textview_password_sign_in"
            android:layout_below="@+id/editext_username_sign_in"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:text="Password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />



        <EditText
            android:singleLine="true"
            android:textColor="#329EAE"
            android:backgroundTint="#C90065"
            android:layout_below="@id/textview_password_sign_in"
            android:id="@+id/editext_password_sign_in"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />



        <Button
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:text="Sign IN"
            android:background="#C90065"
            android:layout_marginTop="90dp"
            android:layout_below="@id/editext_password_sign_in"
            android:id="@+id/button_sign_in"
            android:layout_width="175dp"
            android:layout_height="wrap_content" />


        <Button
            android:textColor="@android:color/white"
            android:gravity="fill"
            android:text="create account"
            android:textStyle="bold"
            android:layout_toEndOf="@id/button_sign_in"
            android:background="#C90065"
            android:layout_marginTop="90dp"
            android:layout_below="@+id/editext_password_sign_in"
            android:id="@+id/button_sign_up"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />

        <Button

            android:textColor="#329EAE"
            android:textStyle="bold"
            android:layout_marginTop="40dp"
            android:text="Forgot Your Password"
            android:background="@android:color/transparent"
            android:layout_below="@+id/button_sign_in"
            android:id="@+id/reset_password_sign_in"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />


    </RelativeLayout>





</RelativeLayout>

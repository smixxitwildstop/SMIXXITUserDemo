<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_friend_profile"
    android:layout_width="match_parent"
    android:background="#262121"
    android:layout_height="match_parent"
    tools:context="com.wildstop.smixxitdemo.FriendProfileActivity">



    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">


        <ImageView
            android:src="@mipmap/teyana_sample_profilee_img"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />


        <Button
            android:id="@+id/chat_button"
            android:text="CHAT"
            android:background="#329EAE"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="130dp"
            android:layout_width="100dp"
            android:layout_height="30dp" />


        <Button
            android:id="@+id/gift_button"
            android:text="SEND GIFT"
            android:layout_alignTop="@+id/chat_button"
            android:background="#329EAE"
            android:layout_toEndOf="@id/chat_button"
            android:layout_width="100dp"
            android:layout_height="30dp" />

        <Button
            android:id="@+id/statusoffriendshipButton"
            android:text="ADD"
            android:background="#329EAE"
            android:layout_alignEnd="@id/gift_button"
            android:layout_alignStart="@id/chat_button"
            android:layout_below="@+id/chat_button"
            android:layout_width="fill_parent"
            android:layout_height="30dp" />



    </RelativeLayout>







<RelativeLayout
    android:layout_marginTop="140dp"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">


    <TextView
        android:background="#329EAE"
        android:id="@+id/textview_following"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:text="Follows"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

  <LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"/>


    <HorizontalScrollView
        android:id="@+id/horizontalscrollview_profile"
        android:layout_below="@+id/textview_following"
        android:layout_width="fill_parent"
        android:layout_height="200dp">

     <LinearLayout
         android:orientation="horizontal"
         android:layout_width="fill_parent"
         android:layout_height="fill_parent">


         <ImageView
             android:adjustViewBounds="true"
             android:src="@mipmap/kim_kardashian_img"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent" />

         <ImageView
             android:adjustViewBounds="true"
             android:src="@mipmap/justin_bieber_img"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content" />

         <ImageView
             android:src="@mipmap/rae_shremmurd_img"
             android:adjustViewBounds="true"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent" />

         <ImageView
             android:src="@mipmap/nicki_minaj_img"
             android:adjustViewBounds="true"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent" />

         <ImageView
             android:adjustViewBounds="true"
             android:src="@mipmap/lady_gaga_img"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent" />

         <ImageView
             android:adjustViewBounds="true"
             android:src="@mipmap/kanye_west_img"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent" />






     </LinearLayout>







    </HorizontalScrollView>

    <TextView
        android:background="#329EAE"
        android:id="@+id/textview_friends"
        android:gravity="center"
        android:textStyle="bold"
        android:text="Friends"
        android:textColor="@android:color/white"
        android:layout_below="@+id/horizontalscrollview_profile"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <HorizontalScrollView
        android:layout_below="@+id/textview_friends"
        android:layout_width="fill_parent"
        android:layout_height="270dp">

        <ImageView
            android:id="@+id/imageview_friends_grid"
            android:adjustViewBounds="true"
            android:src="@mipmap/pixelated"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

    </HorizontalScrollView>















    </RelativeLayout>

    <android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <!-- Appbar -->

        <com.github.rubensousa.floatingtoolbar.FloatingToolbar
            android:backgroundTint="#329EAE"
            android:id="@+id/floatingToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="bottom"
            app:floatingMenu="@menu/main" />

        <android.support.design.widget.FloatingActionButton
            android:src="@mipmap/smixxit_logo"
            app:backgroundTint="@color/colorGrey"
            android:layout_margin="10dp"
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            />


    </android.support.design.widget.CoordinatorLayout>





</android.support.v4.widget.DrawerLayout>

<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_earn_points"
    android:layout_width="match_parent"
    android:background="@color/colorGrey"
    android:layout_height="match_parent"

    tools:context="com.wildstop.smixxitdemo.EarnPoints">

    <RelativeLayout
        android:layout_margin="50dp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >


            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">


                <ImageView
                    android:id="@+id/ad1"
                    android:adjustViewBounds="true"
                    android:src="@mipmap/ad2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />


                <ImageView
                    android:adjustViewBounds="true"
                    android:src="@mipmap/ad2"
                    android:layout_marginTop="10dp"
                    android:id="@+id/ad2"
                    android:layout_below="@+id/ad1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" />

                <ImageView
                    android:adjustViewBounds="true"
                    android:src="@mipmap/ad2"
                    android:layout_marginTop="10dp"
                    android:id="@+id/ad3"
                    android:layout_below="@+id/ad2"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" />

                <ImageView
                    android:adjustViewBounds="true"
                    android:src="@mipmap/ad2"
                    android:layout_marginTop="10dp"
                    android:id="@+id/ad4"
                    android:layout_below="@+id/ad3"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" />












            </RelativeLayout>




        </ScrollView>









    </RelativeLayout>

    <include
        android:layout_gravity="start"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        layout="@layout/activity_acknowledgement_screen"/>









</android.support.v4.widget.DrawerLayout>

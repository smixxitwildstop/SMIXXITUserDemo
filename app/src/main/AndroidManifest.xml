        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name=".SignInScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SignUpActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ChatScreen"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ProfileList"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ExploreScreen"
            android:label="TRENDING ON SMIXXIT"
            android:screenOrientation="portrait" />
        <activity
            android:name=".FriendProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".KylieJennerActivity"
            android:label="@string/title_activity_justin_bieber"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".UserProfile"
            android:screenOrientation="portrait" />
        <activity android:name=".EarnPoints"
            android:screenOrientation="portrait" />
        <activity android:name=".Ad1"
            android:screenOrientation="portrait" />
        <activity android:name=".Ad2"
            android:screenOrientation="portrait" />
        <activity android:name=".Ad3"
            android:screenOrientation="portrait" />
        <activity android:name=".Ad4"
            android:screenOrientation="portrait" />
        <activity
            android:screenOrientation="portrait"
            android:name=".SampleStream"
            android:label="Kylie Jenner Live Stream"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".Home" />
        <activity
            android:screenOrientation="portrait"
            android:name=".ChatInStream"
            android:label="Chatting With Bri"
            android:theme="@style/Theme.AppCompat.Light.Dialog" />
        <activity
            android:screenOrientation="portrait"
            android:name=".AcknowledgementScreen" />
        <activity android:name=".KenoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:screenOrientation="portrait"
            android:name=".SampleStreamKeno"
            android:label="@string/title_activity_sample_stream_keno"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"></activity>
    </application>

</manifest>